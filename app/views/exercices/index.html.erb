<p id="notice"><%= notice %></p>

<h1>Exercices</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Annonce1</th>
      <th>Champ1</th>
      <th>Champ2</th>
      <th>Champ3</th>
      <th>Annonce2</th>
      <th>Champ4</th>
      <th>Champ5</th>
      <th>Champ6</th>
      <th>Annonce3</th>
      <th>Champ7</th>
      <th>Champ8</th>
      <th>Champ9</th>
      <th>Slug</th>
      <th>User</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercices.each do |exercice| %>
      <tr>
        <td><%= exercice.title %></td>
        <td><%= exercice.content %></td>
        <td><%= exercice.annonce1 %></td>
        <td><%= exercice.champ1 %></td>
        <td><%= exercice.champ2 %></td>
        <td><%= exercice.champ3 %></td>
        <td><%= exercice.annonce2 %></td>
        <td><%= exercice.champ4 %></td>
        <td><%= exercice.champ5 %></td>
        <td><%= exercice.champ6 %></td>
        <td><%= exercice.annonce3 %></td>
        <td><%= exercice.champ7 %></td>
        <td><%= exercice.champ8 %></td>
        <td><%= exercice.champ9 %></td>
        <td><%= exercice.slug %></td>
        <td><%= exercice.user_id %></td>
        <td><%= exercice.course_id %></td>
        <td><%= link_to 'Show', exercice %></td>
        <td><%= link_to 'Edit', edit_exercice_path(exercice) %></td>
        <td><%= link_to 'Destroy', exercice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

