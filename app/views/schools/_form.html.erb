
<%= form_for([@school.citytown, @school]) do |f| %>

  <% if @school.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h2>

      <ul>
        <% @school.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :city_manager_id %>
    <%= f.text_field :city_manager_id %>
  </div>

  <!-- city-->
  <div class="options md:flex text-sm items-center text-gray-700 mb-2">    
    <%= f.select :citytown_id, @citytowns.map { |city| [city.title, city.id] }, label: "Ville:",label_class:"font-semibold",
        wrapper: {class:"md:w-1/3 border border-gray-200 focus:outline-none focus:border-gray-500"} %>
            
    <!-- school name-->
    <%= f.select :type, School::SCHOOL_TYPE, label: "Ecole: ", label_class:"font-semibold",
        wrapper: { class: "md:w-1/3 border border-gray-200 focus:outline-none 
        focus:border-gray-500"} %>      
           
    <%= f.select :size, School::SCHOOL_SIZE, label: "Discipline: ", label_class:"font-semibold",
          wrapper: {class:"md:w-1/3 border border-gray-200 focus:outline-none focus:border-gray-500"} %>
  </div>

    <div class="form-actions">
      <%= f.submit "Add School",  class: "inline-flex justify-center py-2 px-4 border 
          border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600
          hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
<% end %>
