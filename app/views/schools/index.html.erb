<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sigle</th>
      <th>Type</th>
      <th>City manager</th>
      <th>Citytown</th>
      <th>User</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.title %></td>
        <td><%= school.sigle %></td>
        <td><%= school.type %></td>
        <td><%= school.city_manager_id %></td>
        <td><%= school.citytown_id %></td>
        <td><%= school.user_id %></td>
        <td><%= school.slug %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

